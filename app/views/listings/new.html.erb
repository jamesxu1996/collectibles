<h1>Create a new listing</h1>

<table>
<%= form_with model: @listing do |form| %>
    <tr>
        <td><%= form.text_field :name, placeholder: "name" %></td>
    </tr>

    <tr>
        <td><%= form.number_field :price, placeholder: "0.00", in: 1.0..99999 %></td>
    </tr>

    <tr>
        <td><%= form.number_field :quantity, placeholder: "1", in: 1..99 %></td>
    </tr>

    <tr>
        <td><%= form.text_field :category, placeholder: "category" %></td>
    </tr>

    <tr>
        <td><%= form.text_field :description, placeholder: "enter a description" %></td>
    </tr>

    <tr>
        <td><%= form.submit%></td>
    </tr>
</table>
<% end %>
