<h1>Collectibles Listings</h1>


<%= render "listings/search_form.html.erb" %>

<table class="table table-striped">
  <tr>
    <th><%= sort_link(@q, :name, "Name", default_order: :asc)%></th>
    <th><%= sort_link(@q, :name, "Price", default_order: :asc)%></th>
    <th colspan="3"></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.name %></td>
    <td>$<%= listing.price %></td>
    <td><%= link_to 'Show', listing, class: "btn btn-outline-primary btn-sm" %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-outline-warning btn-sm" %></td>
    <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-outline-primary btn-sm" %>

<%= paginate @listings %>